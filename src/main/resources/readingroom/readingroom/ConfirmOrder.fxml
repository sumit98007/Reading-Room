<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="349.0" prefWidth="436.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ConfirmOrderController">
    <children>
        <TableView fx:id="orderTable" layoutX="14.0" layoutY="14.0" prefHeight="200.0" prefWidth="400.0">
            <columns>
                <TableColumn fx:id="itemNameColumn" prefWidth="100.0" text="Item Name" />
                <TableColumn fx:id="quantityColumn" prefWidth="100.0" text="Quantity" />
                <TableColumn fx:id="priceColumn" prefWidth="100.0" text="Price" />
            </columns>
        </TableView>
        <Label layoutX="14.0" layoutY="230.0" text="Total Price:" />
        <Label fx:id="totalPriceLabel" layoutX="90.0" layoutY="230.0" />
        <Button fx:id="confirmOrderButton" layoutX="32.0" layoutY="300.0" mnemonicParsing="false" onAction="#handleConfirmOrder" text="Confirm Order" />
        <Button fx:id="goBackButton" layoutX="160.0" layoutY="300.0" mnemonicParsing="false" onAction="#handleGoBack" text="Go Back" />
        <Button fx:id="proceedToPayButton" layoutX="254.0" layoutY="300.0" mnemonicParsing="false" onAction="#handleProceedToPay" text="Proceed To Payment" />
    </children>
</AnchorPane>